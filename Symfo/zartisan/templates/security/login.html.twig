{% extends 'base.html.twig' %}

{% block title %}Z'artisan : Administration{% endblock %}

{% block body %}

<form method="post" id="form_login">
    <div class="login">
        <label for="inputEmail"></label>
        <input type="email" value="{{ last_username }}" name="email" id="Email" class="form-control" 
            placeholder="Email" required autofocus> 
        <label for="inputPassword"></label>
        <input type="password" name="password" id="inputPassword" class="form-control" 
            placeholder="password" required>
        <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}"> 
        <input type="submit" value="Sign In">
    </div>
    <div class="shadow"></div>
</form>

{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('assets/css/form_login.css') }}">
{% endblock %}
{% block javascripts %}
<script src="http://localhost:3000/vendors.js"></script>
<script src="http://localhost:3000/app.js"></script>
{% endblock %}

